{
    "$schema": "https://opencode.ai/config.json",
    "instructions": ["CONTRIBUTING.md", "docs/guidelines.md", ".cursor/rules/*.md"],
    "permission": {
        "doom_loop": "ask",
        "bash": {
            "pip *": "deny",
            "uv*": "allow",
            "findstr*": "deny",
            "grep*": "deny",
            "rg*": "allow",
            "python *": "deny",
            "python3 *": "deny",
            "tofu *": "deny",
            "terraform *": "deny"
            "git push*": "deny",
            "git reset*": "deny",
            "git clean*": "deny",
            "git branch -D*": "deny",
            "git filter-branch*": "deny",
            "git reflog*": "deny",
            "git gc*": "deny",
            "git update-ref*": "deny",
            "git remote*": "deny"
        }
    },
    "tools": {
        "todowrite": true,
        "todoread": true,
        "docs-mcp-server": true
    },
    "formatter": {
        "python-formatter": {
            "command": ["uv", "run", "ruff", "format", "$FILE"],
            "extensions": [".py"]
        }
    },
    "plugin": [
        "oh-my-opencode",
        "opencode-antigravity-auth@beta",
        "@tarquinen/opencode-dcp@latest"
	],
    "watcher": {
        "ignore": ["node_modules/**", "dist/**", ".git/**", "__pycache__", ".venv/**"]
    },
    "model": "google/gemini-3-flash",
    "provider": {
        "local-llama": {
            "npm": "@ai-sdk/openai-compatible",
            "name": "llama.cpp",
            "options": {
                "baseURL": "http://192.168.1.147:10000/v1"
            },
            "models": {
                "devstral": {
                    "name": "Devstral 2 Small",
                    "limit": {
                        "context": 70000,
                        "output": 65536
                    }
                }
            }
        },
        "anthropic": {
            "options": {
                "timeout": 600000,
                "setCacheKey": true
            }
        },
        "google": {
            "models": {
                "gemini-3-pro-low": {
                    "name": "Gemini 3 Pro Low (Antigravity)",
                    "limit": {
                        "context": 1048576,
                        "output": 65535
                    },
                    "modalities": {
                        "input": ["text", "image", "pdf"],
                        "output": ["text"]
                    }
                },
                "gemini-3-pro-high": {
                    "name": "Gemini 3 Pro High (Antigravity)",
                    "limit": {
                        "context": 1048576,
                        "output": 65535
                    },
                    "modalities": {
                        "input": ["text", "image", "pdf"],
                        "output": ["text"]
                    }
                },
                "gemini-3-flash": {
                    "name": "Gemini 3 Flash (Antigravity)",
                    "limit": {
                        "context": 1048576,
                        "output": 65536
                    },
                    "modalities": {
                        "input": ["text", "image", "pdf"],
                        "output": ["text"]
                    }
                },
                "claude-sonnet-4-5": {
                    "name": "Claude Sonnet 4.5 (Antigravity)",
                    "limit": {
                        "context": 200000,
                        "output": 64000
                    },
                    "modalities": {
                        "input": ["text", "image", "pdf"],
                        "output": ["text"]
                    }
                },
                "claude-sonnet-4-5-thinking-high": {
                    "name": "Claude Sonnet 4.5 Thinking High (Antigravity)",
                    "limit": {
                        "context": 200000,
                        "output": 64000
                    },
                    "modalities": {
                        "input": ["text", "image", "pdf"],
                        "output": ["text"]
                    }
                },
                "claude-opus-4-5-thinking-high": {
                    "name": "Claude Opus 4.5 Thinking High (Antigravity)",
                    "limit": {
                        "context": 200000,
                        "output": 64000
                    },
                    "modalities": {
                        "input": ["text", "image", "pdf"],
                        "output": ["text"]
                    }
                }
            }
        }
    }
}
